<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- 
    Contact contactBean = new Contact("010-1111-1111", "uer@jeon.com);
    Person personBean = new Person("유저", contactBean);
   -->
  
  <!-- constructor-arg 태그 : 생성자를 이용해 값을 전달하는 태그 -->
  
  <bean id="contactBean" class="com.jeon.app01.pkg02.Contact" scope="singleton">
    <constructor-arg>
      <value>010-1111-1111</value>
    </constructor-arg>
    <constructor-arg value="user@jeon.com" />
  </bean>

  <bean id="PersonBean" class="com.jeon.app01.pkg02.Person" scope="singleton">
    <constructor-arg value="유저" />
    <constructor-arg ref="contactBean" />
  </bean>

</beans>
